import java.util.*;
public class Main
{
	public static void main(String[] args) {
	 Scanner sc= new Scanner(System.in);
	 System.out.println("Enter the value of a");
	 int a=sc.nextInt();
	 	 System.out.println("Enter the value of n");
	 int n=sc.nextInt();
	 int sum=0;
	for(int i=1;i<=n;i++)
	{
	    sum=sum+a+i;
	}
	 System.out.println("The sum of given series is: "+sum);
	
	    sc.close();
	}
}
